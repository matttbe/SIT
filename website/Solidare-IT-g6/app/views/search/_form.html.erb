<%= form_tag(search_path, method: "post", :class=>"form-search") do %>
  <div class="input-append">
    <%= text_field_tag(:q, "",:class=>"span2 search-query", :placeholder=>"Search") %>
    <select id="type_q" name="type_q">
    <option value="demand">Demand</option>
    <option value="offer">Offer</option>
    </select>
    <p id="show_option">More options</p>
    <div id="more" style=""">
        <label class="checkbox">
          <input type="checkbox" name="q_order_end"> Order by date
        </label>
    </div>
    <%= submit_tag("Search", :class=>"btn") %>
  </div>
<% end %>
<script>
$(document).ready(function(){
    $("#more").toggle();
});
</script>
