<div class="container">
<div class="service-box col-md-12">
  <div class="well well-large service" style="height:200px;">

                <h4><%= organisation.name %></h4>

                <div class="service-action">
                  <%= button_to 'Show', organisation, :class=>"btn btn-default", :method => :get  %>
                  <% if !current_user.nil?&&organisation.creator_id==current_user.id %><%= button_to 'Edit', edit_organisation_path(organisation), :class=>"btn btn-default", :method => :get %><%end%>
                  <% if !current_user.nil?&&organisation.creator_id==current_user.id %><%= button_to 'Destroy', organisation, method: :delete, :class=>"btn btn-danger"%><%end%>
                  
                </div>

  </div>
</div>
</div>