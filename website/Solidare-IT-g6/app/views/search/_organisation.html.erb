<div class="service-box col-md-12">
  <div class="well well-large service">

                <a class="pull-left" href="#">
                  <% cache(organisation) do %>
                    <%= image_tag organisation.photo.url(:thumb) %>
                  <% end %>
                </a>

                <h3><%= organisation.name %></h3>

                <div class="service-action">
                  <%= button_to 'Show', organisation, :class=>"btn btn-default", :method => :get  %>
                  <% if !current_user.nil?&&organisation.creator_id==current_user.id %><%= button_to 'Edit', edit_organisation_path(organisation), :class=>"btn btn-default", :method => :get %><%end%>
                  <% if !current_user.nil?&&organisation.creator_id==current_user.id %><%= button_to 'Destroy', service, method: :delete, :class=>"btn btn-danger"%><%end%>
                  <%end%>
                </div>

  </div>
</div>