<% location= request.env['PATH_INFO'] %>
<div class="full-width-header" id="sticker"> 
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <h3 >Search Result</h3> 
    </div>
    <div class="col-md-4 sticky-search">
      <%= form_tag(search_path, method: "get", :class=>"form-search", :role=>"search", :remote => true, :id => "async-search") do %>
        <%= text_field_tag(:q, "",:class=>"search-query form-control", :placeholder=>"Search", :id=>"s") %>
       <%= submit_tag("search", :class=>"btn btn-primary") %>
      <% end %>
    </div>
    <div class="col-md-2 ">
      <% if !current_user.nil?%>
        <%= link_to 'Save this search', '/save'+@search, :class=>"btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-1 ">
      <% if !current_user.nil?%>
        <%= link_to 'New Service', new_service_path, :class=>"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
  <div class="container">
  <div class="row service-list">
    <div class="col-md-3">
      <div id="sticker-filter">
      <div class="well sidebar-nav">
        <%= render 'match_services' %>
          </div>
        </div>
        </div>
        <div class="col-md-9 service-cont">
          <div class="row">
            <div class="btn-toolbar col-md-2 col-md-offset-10">
              <div class="btn-group">
                <a class="btn" id="list" ><i class="glyphicon glyphicon-list"></i></a>
                <a class="btn" id="grid" ><i class="icon-grid"></i></a>
              </div>
            </div>
          </div>

          <% if @services.nil? or @services.size == 0 %>
          No results
          <% else %>
            <div class="services">
              <%= render :partial => 'services', :locals => { :services => @services } %>
            </div>
            <% if @services.method_defined? :next_page and @services.next_page %>
              <%= link_to 'Load More Services', services_path(:page => @services.next_page), :class => 'load-more-services', :remote => true %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  


