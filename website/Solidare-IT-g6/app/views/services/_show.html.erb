<% @service=service%>

<p>
  <strong>Title:</strong>
  <%= @service.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @service.description %>
</p>

<p>
  <strong>Date start:</strong>
  <%= @service.date_start %>
</p>

<p>
  <strong>Date end:</strong>
  <%= @service.date_end %>
</p>


<% if @service.creator_id==current_user.id %>
<%= link_to 'Edit', edit_service_path(@service) %> |
<%= link_to 'Destroy', service_path(@service), :method=>'delete' %> |
<% elsif @service.matching_service.nil?%>
<%= link_to 'Accept', accept_service_path(@service) %> |
<%end%>
<%= link_to 'Back', services_path %>
