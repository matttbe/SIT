
<h4>Followers</h4>
<% if @followers_list.size == 0 %>
	No Followers
<%else%>
	<!-- On sait peut etre ameliorer ici le nombre de requete qui seraient faites -->
	<% @followers_list.each do |follower| %>
		<% @user_followers = User.where("id = :user_id", :user_id => follower.user)%>		
		<% @user_followers.each do |user_follower| %>
			<%= user_follower.firstname %> <%= user_follower.name %>
		<%end%>
	<%end%>
<%end%> 