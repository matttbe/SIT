<%=bootstrap_form_for(@service) do |f| %>

  <%=f.radio_buttons :is_demand, { "Demand" => true, "Offer" => false }, :label => "what do you want to propose ?"%>

    <%= f.text_field :title %>
    <%= f.collection_select :category_id, Category.all, :id, :title %>
    <%= f.text_area :description %>
    <%= f.datetime_select :date_start %>
    <%= f.datetime_select :date_end %>
    <% if type=="new"%>
      <%= f.submit "Create service",:class =>"btn btn-primary"  %>
    <% else %>
      <%= f.submit "Edit service",:class =>"btn btn-primary"  %>
    <%end%>
<% end %>
