<%=bootstrap_form_for(@service,:html => { :multipart => true  }) do |f| %>

  <%=f.radio_buttons :is_demand, { "Demand" => true, "Offer" => false }, :label => "What do you want to offer ?"%>

    <%= f.text_field :title %>
    <%= f.collection_select :category_id, Category.all, :id, :title %>
    <%= f.text_area :description %>
    <%= f.file_field :photo %>
    <%= f.datetime_select :date_start, :default => 1.hours.from_now %>
    <%= f.datetime_select :date_end, :default => 1.days.from_now %>
    <% if type=="new"%>
      <%= f.submit "Create service",:class =>"btn btn-primary"  %>
    <% else %>
      <%= f.submit "Edit service",:class =>"btn btn-primary"  %>
    <%end%>
<% end %>
