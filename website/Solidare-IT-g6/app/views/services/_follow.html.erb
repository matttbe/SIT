<% if user_signed_in?%>
  <% if !(@service.creator_id==current_user.id) %>
          <% if @followers.size == 0%>
                  <%= link_to 'Follow', follow_path(@service), :class=>"btn btn-default" %>
          <%else%>
                  <%= link_to 'Unfollow', unfollow_path(@service, @followers.first.id) , :class=>"btn btn-default"%>
          <%end%>
  <% end %>
<% end %>
