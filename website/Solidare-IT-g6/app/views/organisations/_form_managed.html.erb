<h3>Register new managed user for "<%=@organisation.name%>"</h3>

<%= bootstrap_form_for(@user, :url => new_managed_created_path(@user)) do |f| %>

    <%= f.text_field :name , :autofocus => true, :class=>"form-control" %>
    <%= f.text_field :firstname, :class=>"form-control" %>
        Birthdate <br />
    <input id="user_birthdate" name="user[birthdate]" type="text" data-behaviour='datepicker'  >

    <script type="text/javascript">
        $(document).ready(function(){
        $('[data-behaviour~=datepicker]').datepicker();
        })
    </script>
<div style="display:none"><%= f.text_field :managed_org_id,  content:@user.managed_org_id %></div>
  <div><%= f.submit "Register" %></div>
<% end %>

