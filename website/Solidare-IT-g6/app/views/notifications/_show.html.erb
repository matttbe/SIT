
<%if @notifications.size > 0 %>
	<% @notifications.each do |notif| %>	
		<% @users.each do |user| %>
			<%if user.id == notif.service.creator_id %>
				<% @creator_firstname = user.firstname %>
				<% @creator_name = user.name %>
			<%end%>
		<%end%>
		<% @service_string = "The service \"" + notif.service.title + "\""%>
		<% case notif.notification_type %>
		<%when 'EDIT'%>
			<%= @service_string %> of <%= @creator_firstname %> <%= @creator_name %> was eddited<br />
		<%when 'ACCEPT'%>
			<%= @service_string %> was accepted by <!-- TODO completer le user qui a accept--><br />
		<%when 'FOLLOW'%>
			<%= @service_string %> was followed by <!-- TODO --> 
		<%when 'UNFOLLOW'%>
			<%= @service_string %> was unfollowed by <!-- TODO --> 
		<%else%>
			NO MESSAGE FOR THIS TYPE
		<%end %>
	<%end%>
<%else%>
	Vous n'avez pas de notification
<%end%>
