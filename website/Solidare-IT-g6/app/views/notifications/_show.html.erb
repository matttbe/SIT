
<%if @notifications.size > 0 %>
	<% @notifications.each do |notif| %>
		<% if notif.service.nil? %>
			<% @users.each do |user| %>
				<% if user.id == notif.creator_id %>
					<% @creator = user %>				
					<% @creator_fullname = " "+@creator.firstname+" "+@creator.name+" " %>
				<%end%>
			<%end%>
			<% case notif.notification_type %>
			<%when 'POST'%>
				<%= link_to @creator_fullname, show_profile_path(notif.creator_id) %> posted in "<%= notif.group.name %>"<br />
			<%else%>
				NO MESSAGE FOR THIS TYPE OF NOTIFICATION
			<%end%>
			
		<%else%>	
			<% @users.each do |user| %>
				<%if user.id == notif.service.creator_id %>
					<% @service_creator = user %>
				<% elsif user.id == notif.creator_id %>
					<% @creator = user %>				
					<% @creator_fullname = " "+@creator.firstname+" "+@creator.name+" " %>
				<%end%>
			<%end%>
			
			<% @service_string = "The service \"" + notif.service.title + "\""%>
			
			<% case notif.notification_type %>
			<%when 'EDIT'%>
				<%= @service_string %> of <%= @service_creator.firstname %> <%= @service_creator.name %> was eddited<br />
			<%when 'ACCEPT'%>
				<%= @service_string %> was accepted by <%= @creator_fullname%> <br />
			<%when 'FOLLOW'%>
				<%= @service_string %> was followed by <%= @creator_fullname%> <br />
			<%when 'UNFOLLOW'%>
				<%= @service_string %> was unfollowed by <%= @creator_fullname%> <br />
			<%else%>
				NO MESSAGE FOR THIS TYPE OF NOTIFICATION
			<%end %>
		<%end%>

	<%end%>
<%else%>
	You've no notifications
<%end%>
