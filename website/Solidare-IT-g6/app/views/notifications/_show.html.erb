
<%if @notifications.size > 0 %>
	<% @notifications.each do |notif| %>
	<% @notifications.order(:seen).each do |notif| %>
		<% if !notif.group.nil? %>
			<% @users.each do |user| %>
				<% if user.id == notif.creator_id %>
					<% @creator = user %>				
					<% @creator_fullname = " "+@creator.firstname+" "+@creator.name+" " %>
				<%end%>
			<%end%>
			<% case notif.notification_type %>
			<%when 'POST'%>
				<%= link_to @creator_fullname, show_profile_path(notif.creator_id) %> posted in "<%= link_to notif.group.name, show_group_path(notif.group) %>"<br />
			<%else%>
				NO MESSAGE FOR THIS TYPE OF NOTIFICATION
			<%end%>
			
		<%elsif ! notif.service.nil? %>	
			<% @users.each do |user| %>
				<%if user.id == notif.service.creator_id %>
					<% @service_creator = user %>
				<% elsif user.id == notif.creator_id %>
					<% @creator = user %>				
					<% @creator_fullname = " "+@creator.firstname+" "+@creator.name+" " %>
				<%end%>
			<%end%>
			
			<% case notif.notification_type %>
			<%when 'EDIT'%>
				The <%= link_to "service", service_path(notif.service)%> "<%=notif.service.title%>" of <%= @service_creator.firstname %> <%= @service_creator.name %> was eddited<br />
			<%when 'ACCEPT'%>
				The <%= link_to "service", service_path(notif.service)%> "<%=notif.service.title%>"  was accepted by <%= link_to @creator_fullname, show_profile_path(@creator)%> <br />
			<%when 'FOLLOW'%>
				The <%= link_to "service", service_path(notif.service)%> "<%=notif.service.title%>"  was followed by <%= link_to @creator_fullname, show_profile_path(@creator)%><br />
			<%when 'UNFOLLOW'%>
				The <%= link_to "service", service_path(notif.service)%> "<%=notif.service.title%>"  was unfollowed by <%= link_to @creator_fullname, show_profile_path(@creator)%><br />
			<%else%>
				NO MESSAGE FOR THIS TYPE OF NOTIFICATION
			<%end %>
		<%elsif ! notif.badge.nil? %>
			You win the <%= link_to notif.badge.name, show_profile_path(notif.creator.id) %><br />
		<%else%>
			NOTIFICATION TYPE UNKNOWN
		<%end%>
	<%end%>
	<%end%>
<%else%>
	You've no notifications
<%end%>
