<!-- List all groups for now-->
<p>In here will be suggested some groups to the user</p>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @groups.each do |group| %>
	<%unless group.secret == true %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= link_to 'Show', group%></td>

        <td><%if !current_user.nil? %>
        		<% @member = false%>
	        	<% current_user.groups.each do |group_user|%>
	          		<%if group.id == group_user.id %>
	          			<%@member = true%>
	          		<%end%>
	          	<%end%>
	          	<% if !@member%>
		          	<span id="join"><%= link_to 'Join', {:controller => "group_user_relation", :action => "new", :idGroup => group, :idUser => current_user, :role => 'basic'}%></span>
	          	<%end%>
          	<% end %></td>
      </tr>
	<% end %>
  <% end %>
  </tbody>
</table>

<% if current_user.nil?%>
  <%= link_to 'New Group', sign_in_path %>
<% else %>
  <%= link_to 'New Group', new_group_path %>
<% end %>
