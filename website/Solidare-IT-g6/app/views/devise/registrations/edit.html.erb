<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true  }) do |f| %>



    <%= f.text_field :name , :autofocus => true %>
    <%= f.text_field :firstname %>
    <%= f.file_field :avatar %>
    <%=f.date_select :birthdate%>
    <%= f.email_field :email %>
    <%= f.check_box :mail_notif, :label=>"Receive mails when you have a notification" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  
  <%= f.password_field :password, :autocomplete => "off" %>
    <i>(leave blank if you don't want to change it)</i>
  <%= f.password_field :password_confirmation %>
 
  <%= f.password_field :current_password %>
    <i>(we need your current password to confirm your changes)</i>

  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>   

<% if false %>
 <%= render "users/authenticate"%></br>
<% end %>
<%= link_to "Back", :back %>
