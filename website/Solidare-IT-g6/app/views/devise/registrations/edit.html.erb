<h2 class="full-width-header">Edit <%= resource_name.to_s.humanize%> </h2>
<div class="container">
<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true  }) do |f| %>



    <%= f.text_field :name , :autofocus => true, :class=>"form-control" %>
    <%= f.text_field :firstname, :class=>"form-control" %>
    <%= f.file_field :avatar %>
    <%=f.date_select :birthdate, :style=>"max-height:100px;"%>
    <%= f.email_field :email, :class=>"form-control" %>
    <%= f.check_box :mail_notif, :label=>"Receive mails when you have a notification" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  
  <%= f.password_field :password, :autocomplete => "off", :class=>"form-control" %>
    <i>(leave blank if you don't want to change it)</i>
  <%= f.password_field :password_confirmation, :class=>"form-control" %>
 
  <%= f.password_field :current_password, :class=>"form-control" %>
    <i>(we need your current password to confirm your changes)</i>

  <div><%= f.submit "Update" %></div>
<% end %>



<p><h3><span class="label label-default">Want to delete this account?</span> </h3>
  <%= button_to "Delete my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class=>"btn btn-danger btn-lg" %></p>   

<%= link_to "Back", :back, :class=>"btn btn-default" %>
</div>