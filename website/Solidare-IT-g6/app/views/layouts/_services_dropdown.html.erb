
<li class="divider-vertical"></li>
<%if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Services
    </a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "Search a service",  services_path, :role=>"menuitem" %></li>
      <li><%= link_to "Add a service",  new_service_path, :role=>"menuitem" %></li>
      <li><%= link_to "See my services",  my_services_path(current_user), :role=>"menuitem" %></li>
      <li><%= link_to "See followed services",  following_services_path, :role=>"menuitem" %></li>
      <%if !current_user.nil? && current_user.superadmin %>
        <li><%= link_to "See historic",  historic_path, :role=>"menuitem" %></li>
      <% end %>
    </ul>
  </li>
<% else %>
<li><%= link_to "Services", services_path %></li>
<% end %>
