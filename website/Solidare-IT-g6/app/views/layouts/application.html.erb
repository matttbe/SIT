<!DOCTYPE html>
<html>
<head>
  <title>SolidareItG6</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
        <div id="header" class="hero-unit">
            <div style="text-align: center;"><img src="/images/logo.png" alt ="logo" align="center"></img></div>
            <h1>Solidare-it</h1>
            <p>Un site solidaire!</p>
                                    <% location= request.env['PATH_INFO'] %>
                                        <div class="navbar">
                                          <div class="navbar-inner">

                                            <ul class="nav">
                                               <% if location=='/' %>
                                                <li class="active">
                                              <% else %>
                                                <li>
                                              <% end %>
                                                <a href="<%= root_path  %>">Home</a></li>

                                              <% if location==services_path %>
                                                <li class="active">
                                              <% else %>
                                                <li>
                                              <% end %>
                                                <a href="<%= services_path  %>">Services</a></li>

                                                <%= form_tag(search_path, method: "post", :class=>"form-search") do %>
                                                  <div class="input-append">
                                                    
                                                    
                                                    <%= text_field_tag(:q, "Search",:class=>"span2 search-query") %>
                                                    <select id="type_q" name="type_q">
                                                      <option value="demand">Demand</option>
                                                      <option value="offer">Offer</option>
                                                    </select>
                                                    <%= submit_tag("Search", :class=>"btn") %>
                                                  </div>
                                                <% end %>
                                            </ul>
                                             <ul class="nav pull-right">
                                                <%= render 'layouts/usermenu' %>
                                            </ul>
                                          </div>
                                        </div>


          </div>

  
   <% if notice.present? %>
      <div class="alert alert-success"><%= content_tag :p, notice, :class => 'notice'%></div>
    <% end %>
    <% if alert.present? %>
      <div class="alert alert-error"><%= content_tag :p, alert,  :class => 'alert'%></div>
  <% end %>


<%= yield %>
  </div>

</body>
</html>
